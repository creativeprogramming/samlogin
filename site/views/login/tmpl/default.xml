                <option value="1">Yes</option>
            </param>
            
            <param name="showauthvia" type="radio" default="0" label="Show IdP Name" description="">
                <option value="0">No</option>
                <option value="1">Yes</option>
            </param>
            
               <param name="showgravatar" type="radio" default="0" label="Show gravatar" description="">
